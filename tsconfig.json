{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./types", "./node_modules/@types"
    ]
  },
  "compileOnSave": false,
  "exclude": [
    "tests", "dist"
  ],
  "include": [
    "src/**/*.ts"
  ]
}